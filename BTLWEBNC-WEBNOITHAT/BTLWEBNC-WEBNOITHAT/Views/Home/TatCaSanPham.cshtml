@*@model List<TDanhMucSp>*@
@{
    ViewData["Title"] = "TatCaSanPham";
    Layout = "~/Views/Shared/_LayoutTrangchu.cshtml";
}

@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<TDanhMucSp>

<div class="col-12">
    <form action="#" class="form-inline">
        Tên sản phẩm: 
        <input type="text" name="timKiem" />
        Giá từ:
        <input type="number" name="to" />
        đến:
        <input type="number" name="from" />
        <button type="submit">Tìm</button>
    </form>
</div>

@foreach(var item in Model){
    <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
        <div class="featured__item">
            <div class="featured__item__pic set-bg" data-setbg=@Url.Content("../images/funir-images/"+item.AnhDaiDien) style="background-image: url(&quot;img/featured/feature-1.jpg&quot;);">
                <ul class="featured__item__pic__hover">
                    <li><a asp-controller="Home" asp-action="AddYeuThich" asp-route-id="@item.MaSp"><i class="fa fa-heart"></i></a></li>
                    <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                    <li><a asp-controller="Home" asp-action="AddToCard" asp-route-id="@item.MaSp"><i class="fa fa-shopping-cart"></i></a></li>
                </ul>
            </div>
            <div class="featured__item__text">
                <h6><a asp-controller="Home" asp-action="ProductDetail" asp-route-maSp="@item.MaSp">@item.TenSp</a></h6>
                <h5>@item.GiaLonNhat</h5>
            </div>
        </div>
    </div>
}
<div class="product__pagination">
    @Html.PagedListPager(Model, page=>Url.Action("TatCaSanPham",new{page =page}))
</div>